		 height: 300,
		 features: {
		 scrollbar: false,
		 loop: true,
		 live: true,
		 hashtags: true,
		 timestamp: true,
		 avatars: true,
		 toptweets: true,
		 behavior: 'default'
		 }
		}).render().start();
		</script>
	</div>	
<% end %>
